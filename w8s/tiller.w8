#!/bin/sh

echo "wait on Tiller to become available"

for i in {1..150}; do # timeout for 5 minutes
  RESULT=$(kubectl get po --namespace=kube-systemi | grep tiller)
  if [ $(RESULT) -ne 1 ]; then
      break
  fi
  sleep 2
done

echo "kubectl commands are now able to interact with Minikube cluster"
kubectl get po
