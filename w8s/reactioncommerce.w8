#!/bin/sh
echo -n "Wait on Reaction Commerce to become available"

# while loop
countone=1
# timeout for 15 minutes
while [ $countone -lt 151 ]
do
  echo -n '.'
  RESULT=$(kubectl get po | grep reactionetes-reactioncommerce | grep Running)
  if [ "$RESULT" ]; then
      echo ""
      echo "$RESULT"
      break
  fi
  countone=`expr $countone + 1`
  sleep 6
done

echo "Reaction Commerce is now up and running."
